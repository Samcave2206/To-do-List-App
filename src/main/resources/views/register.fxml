<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/21.0.2"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.controller.RegisterController"
           stylesheets="@../css/mobile-main.css">

    <BorderPane maxWidth="420" prefWidth="420" styleClass="mobile-container">
        <center>
            <VBox spacing="18" alignment="TOP_CENTER" styleClass="register-card">
                <padding>
                    <Insets top="30" right="32" bottom="30" left="32"/>
                </padding>

                <StackPane prefHeight="50">
                    <Button text="←"
                        styleClass="back-btn"
                        onAction="#goToLogin"
                        StackPane.alignment="CENTER_LEFT"
                        translateX="10"/>
                    <Label text="Create Account"
                        styleClass="register-header"
                        StackPane.alignment="CENTER"/>
                </StackPane>

                <StackPane alignment="CENTER" styleClass="register-badge"
                           prefWidth="30" prefHeight="30"
                           maxWidth="30" maxHeight="30">
                    <Label text="✓" styleClass="register-badge-icon"/>
                </StackPane>

                <Label text="Create Your Account" styleClass="register-title"/>
                <Label text="Let's get you started!" styleClass="register-subtitle"/>

                <VBox spacing="14" styleClass="register-form">
                    <Label text="Full Name" styleClass="register-field-label"/>
                    <TextField fx:id="nameField" promptText="Enter your full name" styleClass="register-input"/>

                    <Label text="Email" styleClass="register-field-label"/>
                    <TextField fx:id="emailField" promptText="Enter your email address" styleClass="register-input"/>

                    <Label text="Password" styleClass="register-field-label"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="register-input"/>
                    <Label text="At least 8 characters" styleClass="register-hint"/>

                    <Label text="Confirm Password" styleClass="register-field-label"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" styleClass="register-input"/>
                    <Label fx:id="errorLabel" text="" styleClass="register-error"/>
                </VBox>

                <Button text="Create Account"
                        styleClass="register-primary-btn"
                        onAction="#handleRegister"
                        maxWidth="Infinity"/>

                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" styleClass="register-subtitle"/>
                    <Hyperlink text="Log In" onAction="#goToLogin" styleClass="register-login-link"/>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
</StackPane>
