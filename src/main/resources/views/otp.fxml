<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/21.0.2"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.controller.OTPController"
           stylesheets="@../css/mobile-main.css">

    <BorderPane maxWidth="420" prefWidth="420" styleClass="mobile-container">
        <center>
            <VBox spacing="18" styleClass="otp-card">
                <padding>
                    <Insets top="30" right="32" bottom="30" left="32"/>
                </padding>

                <StackPane styleClass="otp-header" prefHeight="50">
                    <Button text="â†"
                        styleClass="back-btn"
                        onAction="#handleBack"
                        StackPane.alignment="CENTER_LEFT"
                        translateX="10"/>
                    <Label text="Verify Your Account"
                        styleClass="otp-title"
                        StackPane.alignment="CENTER"/>
                </StackPane>

                <VBox spacing="6" alignment="CENTER">
                    <Label text="Enter the 6-digit code sent to your email" styleClass="otp-instruction"/>
                    <Label fx:id="titleLabel" styleClass="otp-email"/>
                </VBox>

                <TextField fx:id="otpField"
                           promptText="_ _ _ _ _ _"
                           styleClass="otp-input"
                           maxWidth="240"/>

                <Label fx:id="errorLabel" styleClass="otp-error"/>

                <Label fx:id="countdownLabel" styleClass="otp-countdown"/>

                <Button text="Verify"
                        styleClass="register-primary-btn"
                        onAction="#handleVerify"
                        maxWidth="Infinity"/>

                <HBox alignment="CENTER" spacing="6">
                    <Label text="Didn't receive a code?" styleClass="otp-instruction"/>
                    <Button fx:id="resendBtn"
                            text="Resend"
                            styleClass="otp-resend"
                            onAction="#handleResend"
                            disable="true"/>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
</StackPane>
