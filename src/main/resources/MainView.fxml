<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>



<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.MainController"
      alignment="CENTER" spacing="20" prefHeight="500" prefWidth="940">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="Welcome to To-Do List app ðŸ“" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox alignment="CENTER" spacing="10">

        <TextField fx:id="titleField" promptText="Enter Task Title" prefWidth="100"/>
        <TextArea fx:id="descriptionField" promptText="Add Description" prefWidth="200"/>

        <DatePicker fx:id="dueDatePicker" promptText="Deadline date" prefWidth="120"/>
        <TextField fx:id="timeField" promptText="HH:mm (24h)" prefWidth="100"/>

        <ComboBox fx:id="priorityCombo" promptText="Priority" prefWidth="100"/>




        <Button text="Add" onAction="#handleAdd"/>
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button text = "AI Generator" onAction = "#handleAISuggest" />
        <Button text="Delete" onAction="#handleDelete"/>
        <Button text="Logout" onAction="#handleLogout" />
        <Button text="Mark Done" onAction="#handleMarkAsCompleted"/>
        <Button text="Sort by Deadline" onAction="#handleSortByDeadline"/>
        <Button text="Sort by Priority" onAction="#handleSortByPriority"/>
    </HBox>

    <TableView fx:id="table" prefHeight="400" prefWidth="900">
        <columns>
            <TableColumn fx:id="colIndex" text="#" prefWidth="20"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
            <TableColumn fx:id="colDescription" text="Description" prefWidth="280"/>
            <TableColumn fx:id="colCreatedDate" text="Created Date" prefWidth="125"/>
            <TableColumn fx:id="colDeadline" text="Deadline" prefWidth="125"/>
            <TableColumn fx:id="colPriority" text="Priority" prefWidth="100"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>
